<ul>
	{% for miniProject in miniProjects %}
		<li class="textWrap-pretty"
		{%- if miniProject.svg or miniProject.emoji -%}
			{%- set fullSvg -%}
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" width="1.1em" height="1.1em">
				{% if miniProject.svg -%}
					{{- miniProject.svg | safe -}}
				{%- elseif miniProject.emoji %}
					{% if miniProject.emojiBg %}<rect width="100%" height="100%" fill="{{ miniProject.emojiBg }}"/>{% endif %}
					<text x="50%" y="0.95em" font-size="48" text-anchor="middle" fill="black">{{ miniProject.emoji }}</text>
				{%- endif %}
				</svg>
			{%- endset %}
			style="list-style-image: url('data:image/svg+xml,{{ fullSvg | urlencode }}');"
		{%- endif -%}
		>
			<a href="{{ miniProject.url }}">{{ miniProject.name }}</a>{% if miniProject.blurb %}: {{ miniProject.blurb }}{% endif %}
		</li>
	{% endfor %}

{{ set extendedCardAttrs = cardAttrs || {} }}
{{ set attrs }}class="{{ `card ${classes || ''}` |> trim }}" {{ Object.entries(extendedCardAttrs).map((e) => `${e[0]}="${e[1]}"`).join(' ') }}{{ /set }}
{{ set imageLink = (image ? image.link : null) || link }}
{{ set isImageAriaHidden = image && (image.isAriaHidden || (!image.alt && heading) || imageLink == link) }}
<article {{ attrs |> trim }}>
	{{ if image }}
		<div class="card-image">
			<a href="{{ imageLink }}"{{ if isImageAriaHidden }} tabindex="-1" aria-hidden="true"{{ /if }}>
				<img
					src="{{ image.src }}"
					{{ if image.srcset }}srcset="{{ image.srcset }}"{{ /if }}
					{{ if image.sizes }}sizes="{{ image.sizes }}"{{ /if }}
					alt="{{ image.alt || ((imageLink && !isImageAriaHidden) ? heading  : '') }}"
					width="{{ image.width }}"
					height="{{ image.height }}"
					{{ if image.lazy }}loading="lazy"{{ /if }}
					{{ if image.focusPoint || image.style -}}
					style="
						{{- if image.focusPoint }}--CARD-image-focus-point: {{ image.focusPoint }};{{ /if -}}
						{{- if extraStyle }}{{ image.style }}{{ /if -}}
					"
					{{- /if }}
				>
			</a>
			{{ if image.decorator }}
				<div
					class="card-decorator | fontSize-tiny"
				>{{ image.decorator }}</div>
			{{ /if }}
		</div>
	{{ /if }}

	<div class="card-content">
		{{ if eyebrow }}
			{{ eyebrow }}
		{{ /if }}

		{{ if heading }}
			<{{ headingTag || 'h2' }} class="h3 | card-heading">
			<a href="{{ link }}" {{ if !containsLinks }}class="card-link--cover"{{ /if }}>
				{{ heading }}
			</a>
			</{{ headingTag || 'h2' }}>
		{{ /if }}
		
		<div>
		{{ if descriptionMarkup }}
			{{ descriptionMarkup }}
		{{ else if description }}
			<p class="card-description | textWrap-balance">{{ description }}</p>
		{{ /if }}
		</div>
	</div>
</article>